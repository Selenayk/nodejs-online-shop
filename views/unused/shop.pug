extends layouts/main-layout.pug 

block styles 
  link(rel="stylesheet", href="/css/product.css")
  link(rel="stylesheet", href="/css/forms.css")

block content 
  main
    if prods.length > 0
        .grid 
          each product in prods
            article.card.product-item
              header.card__header 
                h1.product__title #{product.title}
              div.card__image
                img(src="https://media.istockphoto.com/id/1350722846/photo/green-hardcover-book-on-white-background-with-clipping-path.jpg?s=612x612&w=0&k=20&c=LqxK_bl5VThfCcDpudgFc8d5MuJhN1gJlcPGQBS1MsY=", alt="A Book")
              div.card__content 
                h2.product__price $19.99
                p.product__description A very interesting book about so many even more interesting things!
              .card__actions 
                button.btn Add to Cart  
    else       
      h1 No Products 

